---

{{#extend "lyt-details"}}
	{{#content "main-left"}}
	{{! WrapWith START: Zone }}
		{{#wrapWith "p-zone-veams" headline="Article examples"}}
			{{#mergeData article.simple data='{
				"articleMd": {
					"rteContextClass": "simple",
					"rteMd": "veams-components/markdown/text.md"
				}}'
			}}
				{{> c-article}}
			{{/mergeData}}
		{{/wrapWith}}
		{{! WrapWith END: Article }}

		{{! WrapWith START: Article }}
		{{#wrapWith "p-zone-veams"}}
			{{#mergeData article.articleWithImage data='{
				"articleMd": {
					"rteContextClass": "image",
					"rteMd": "veams-components/markdown/text.md"
				}}'
			}}
				{{> c-article}}
			{{/mergeData}}
		{{/wrapWith}}
	{{! WrapWith END: Article }}
		{{! WrapWith START: Article }}
		{{#wrapWith "p-zone-veams"}}
			{{#mergeData article.multipleContent data='{
				"articleMd": {
					"rteContextClass": "content",
					"rtes": [
						{"rteMd": "veams-components/markdown/text.md"},
						{"rteMd": "veams-components/markdown/h2.md"},
						{"rteMd": "veams-components/markdown/table.md"},
						{"rteMd": "veams-components/markdown/h3.md"},
						{"rteMd": "veams-components/markdown/ul.md"}
					]
				}}'
			}}
				{{> c-article}}
			{{/mergeData}}
		{{/wrapWith}}
	{{! WrapWith END: Article }}

	{{/content}}
{{/extend}}
