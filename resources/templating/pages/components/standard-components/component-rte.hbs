{{#extend "lyt-default"}}
	{{#content "main"}}

	{{! WrapWith START: rte }}
		{{#wrapWith "p-zone-veams" headline="RTE with simple markdown reference"}}

			{{#with rte}}
				{{#mergeData single data='{"rteMd": "veams-components/markdown/text.md"}'}}
					{{> c-rte}}
				{{/mergeData}}
			{{/with}}

		{{/wrapWith}}
		{{! WrapWith END: rte }}
		{{! WrapWith START: rte complex }}
		{{#wrapWith "p-zone-veams" headline="RTE with multiple markdown references" bg-color="highlight-1"}}
			{{#with rte}}
				{{#mergeData full data='{"rtes": [
					{"rteMd": "veams-components/markdown/h2.md"},
					{"rteMd": "veams-components/markdown/text.md"},
					{"rteMd": "veams-components/markdown/ol.md"},
					{"rteMd": "veams-components/markdown/table.md"},
					{"rteMd": "veams-components/markdown/h3.md"},
					{"rteMd": "veams-components/markdown/ul.md"}
				]}'}}
					{{> c-rte}}
				{{/mergeData}}
			{{/with}}
		{{/wrapWith}}
	{{! WrapWith END: rte complex }}

	{{/content}}
{{/extend}}
