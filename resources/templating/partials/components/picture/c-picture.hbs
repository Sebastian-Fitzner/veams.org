---
component: picture
---

<picture class="c-picture{{#if pictureModifierClass}}--{{pictureModifierClass}}{{/if}} {{pictureClasses}}" data-css="c-picture">

	<!--[if IE 9]><audio><![endif]-->
	{{#if picture320}}
		<source srcset="{{picture320}} 1x, {{picture320_2x}} 2x" media="(max-width: 320px)"/>
	{{/if}}

	{{#if picture480}}
		<source srcset="{{picture480}} 1x, {{picture480_2x}} 2x" media="(max-width: 480px)"/>
	{{/if}}

	{{#if picture640}}
		<source srcset="{{picture640}} 1x, {{picture640_2x}} 2x" media="(max-width: 640px)"/>
	{{/if}}

	{{#if picture768}}
		<source srcset="{{picture768}} 1x, {{picture768_2x}} 2x" media="(max-width: 768px)"/>
	{{/if}}

	{{#if picture1024}}
		<source srcset="{{picture1024}} 1x, {{picture1024_2x}} 2x" media="(max-width: 1024px)"/>
	{{/if}}

	{{#if picture1025}}
		<source srcset="{{picture1025}} 1x, {{picture1025_2x}} 2x" media="(min-width: 1024px)"/>
	{{/if}}

	{{#if picture769}}
		<source srcset="{{picture769}} 1x, {{picture769_2x}} 2x" media="(min-width: 769px)"/>
	{{/if}}

	{{#if picture481}}
		<source srcset="{{picture481}} 1x, {{picture481_2x}} 2x" media="(min-width: 481px)"/>
	{{/if}}

	{{#if picture321}}
		<source srcset="{{picture321}} 1x, {{picture321_2x}} 2x" media="(min-width: 321px)"/>
	{{/if}}
	<!--[if IE 9]></audio><![endif]-->

	<img src="{{pictureUrlStd}}" alt="{{pictureAlt}}"/>
</picture>